<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/typedInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textMaster"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="17dp"
        android:text="Enter field" />

    <TextView
        android:id="@+id/textMaster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Enter your information:" />

    <ImageButton
        android:id="@+id/voiceOne"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textMaster"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginTop="26dp"
        android:src="@android:drawable/ic_btn_speak_now" />

    <TextView
        android:id="@+id/textViewForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewEight"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:text="Or you can enter via this form" />

    <EditText
        android:id="@+id/textViewEight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/typedInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="Write your response here" >

        <requestFocus />
    </EditText>

</RelativeLayout>
